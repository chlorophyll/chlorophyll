{
    "$id": "chlorophyll",
    "definitions": {
        "types": {
            "vector3": {
                "type": "array",
                "items": {
                    "type": "number"
                },
                "minItems": 3,
                "maxItems": 3
            },
            "vector2": {
                "type": "array",
                "items": {
                    "type": "number"
                },
                "minItems": 2,
                "maxItems": 2
            },
            "euler": {
                "type": "array",
                "items": [{
                        "type": "number"
                    },
                    {
                        "type": "number"
                    },
                    {
                        "type": "number"
                    },
                    {
                        "type": "string"
                    }
                ],
                "minItems": 4,
                "maxItems": 4
            },
            "color": {
                "type": "string",
                "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
            },
            "pixelArray": {
                "type": "array",
                "items": {
                    "type": "number"
                }
            },
            "coord": {
                "type": "array",
                "items": {
                    "type": "number"
                },
                "minItems": 3,
                "maxItems": 4
            },
            "coordList": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/types/coord"
                }
            },
            "unit": {
                "type": "object",
                "properties": {
                    "_tag": {
                        "type": "string"
                    }
                },
                "required": ["_tag"]
            },
            "unitValue": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "_tag": {
                                "type": "string"
                            },
                            "value": {}
                        },
                        "required": ["_tag", "value"]
                    },
                    {"type": "number"}
                ]
            }
        },
        "objects": {
            "group": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "number"
                    },
                    "pixels": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    },
                    "color": {
                        "$ref": "#/definitions/types/color"
                    },
                    "visible": { "type": "boolean" }
                },
                "additionalProperties": false,
                "required": ["name", "id", "color", "pixels", "visible"]
            },
            "baseMapping": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "number"
                    },
                    "group": {
                        "type": "number"
                    },
                    "type": {
                        "type": "string"
                    },
                    "settings": {
                        "type": "object"
                    }
                },
                "required": ["name", "id", "type", "settings"],
                "additionalProperties": false
            },
            "transformMapping": {
                "allOf": [
                    { "$ref": "#/definitions/objects/baseMapping" },
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "pattern": "transform"
                            },
                            "settings": {
                                "type": "object",
                                "properties": {
                                    "shape": { "type": "string" },
                                    "position": {
                                        "$ref": "#/definitions/types/vector3"
                                    },
                                    "rotation": {
                                        "$ref": "#/definitions/types/vector3"
                                    },
                                    "scale": {
                                        "$ref": "#/definitions/types/vector3"
                                    },
                                    "autoscale": {
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "position",
                                    "rotation",
                                    "scale",
                                    "autoscale"
                                ],
                                "additionalProperties": false
                            }
                        }
                    }
                ]
            },
            "projectionMapping": {
                "allOf": [{
                        "$ref": "#/definitions/objects/baseMapping"
                    },
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "pattern": "projection"
                            },
                            "settings": {
                                "type": "object",
                                "properties": {
                                    "plane_angle": {
                                        "$ref": "#/definitions/types/vector2"
                                    },
                                    "rotation": {
                                        "type": "number"
                                    },
                                    "origin": {
                                        "$ref": "#/definitions/types/vector3"
                                    }
                                },
                                "required": ["rotation", "plane_angle", "origin"],
                                "additionalProperties": false
                            }
                        }
                    }
                ]
            },
            "linearMapping": {
                "allOf": [{
                        "$ref": "#/definitions/objects/baseMapping"
                    },
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "pattern": "linear"
                            },
                            "settings": {
                                "type": "object",
                                "properties": {
                                    "pixels": {
                                        "type": "array",
                                        "items": {
                                            "type": "number"
                                        }
                                    },
                                    "groupIds": {
                                        "type": "array",
                                        "items": {
                                            "type": "number"
                                        }
                                    }
                                },
                                "required": ["groupIds", "pixels"],
                                "additionalProperties": false
                            }
                        }
                    }
                ]
            },
            "uvMapping": {
                "allOf": [
                    { "$ref": "#/definitions/objects/baseMapping" },
                    {
                        "properties": {
                            "type": {
                                "type": "string",
                                "pattern": "uv"
                            },
                            "settings": {
                                "type": "object",
                                "properties": {
                                    "uvCoords": {
                                        "type": "array",
                                        "items": {
                                            "$ref": "#/definitions/types/vector2"
                                        }
                                    },
                                    "dimension": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                ]
            },
            "mapping": {
                "anyOf": [{
                        "$ref": "#/definitions/objects/transformMapping"
                    },
                    {
                        "$ref": "#/definitions/objects/projectionMapping"
                    },
                    {
                        "$ref": "#/definitions/objects/linearMapping"
                    },
                    {
                        "$ref": "#/definitions/objects/uvMapping"
                    }
                ]
            },
            "graphData": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "anyOf": [{
                                "$ref": "#/definitions/types/unit"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "additionalProperties": false,
                "required": ["name"]
            },
            "node": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "pos": {
                        "$ref": "#/definitions/types/vector2"
                    },
                    "title": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "input_settings": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "output_settings": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    },
                    "parameters": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": "string",
                                "type": "string",
                                "value": {}
                            },
                            "required": ["name", "type"]
                        }
                    },
                    "defaults": {
                        "type": "object",
                        "additionalProperties": {
                            "anyOf": [
                                { "$ref": "#/definitions/types/unitValue" },
                                { "type": "null" }
                            ]
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["id", "title", "type", "defaults"]
            },
            "edge": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "src_id": {
                        "type": "number"
                    },
                    "src_slot": {
                        "type": "number"
                    },
                    "dst_id": {
                        "type": "number"
                    },
                    "dst_slot": {
                        "type": "number"
                    }
                },
                "additionalProperties": false,
                "required": ["id", "src_id", "src_slot", "dst_id", "dst_slot"]
            },
            "graph": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "global_inputs": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/objects/graphData"
                        }
                    },
                    "global_outputs": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/objects/graphData"
                        }
                    },
                    "nodes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/objects/node"
                        }
                    },
                    "refs": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "minItems": 2,
                            "maxItems": 2
                        }
                    },
                    "edges": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/objects/edge"
                        }
                    }
                },
                "required": ["id", "global_inputs", "global_outputs", "nodes", "refs", "edges"],
                "additionalProperties": false
            },
            "patternType": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "number"
                    },
                    "mapping_type": {
                        "type": "string"
                    },
                    "coord_type": {
                        "type": "string"
                    },
                    "stages": {
                        "type": "object",
                        "properties": {
                            "pixel": { "type": "number"}
                        }
                    }
                },
                "required": ["name", "id", "stages"],
                "additionalProperties": false
            },
            "model": {
                "type": "object",
                "properties": {
                    "mapper": {"type": "string"},
                    "num_pixels": {"type": "number"},
                    "flip_camera": {"type": "boolean"},
                    "strips": {
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {"$ref": "#/definitions/types/coordList"},
                                {
                                    "type": "object",
                                    "properties": {
                                        "label": {"type": "string"},
                                        "pixels": {"$ref": "#/definitions/types/coordList"}
                                    }
                                }
                            ]
                        }
                    }
                }
            },
            "playlistItem": {
                "type": "object",
                "properties": {
                    "duration": {
                        "type": "number"
                    },
                    "id": {
                        "type": "number"
                    },
                    "pattern": {
                        "type": "number"
                    },
                    "group": {
                        "type": "number"
                    },
                    "mapping": {
                        "type": "number"
                    }
                }
            },
            "hardwareSettings": {
                "type": "object",
                "properties": {
                    "protocol": {
                        "type": "string"
                    },
                    "settings": {
                        "type": ["object", "array"]
                    }
                }
            },
            "timeline": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "name": {
                        "type": "string"
                    },
                    "outputOrder": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    },
                    "clipIds": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                }
            },
            "output": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "groupIds": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    },
                    "layerIds": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                }
            },
            "layer": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "opacity": {
                        "type": "number"
                    },
                    "blendingMode": {
                        "type": "number"
                    }
                }
            },
            "clip": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "patternId": {
                        "type": "number"
                    },
                    "mappingId": {
                        "type": "number"
                    },
                    "layerId": {
                        "type": "number"
                    },
                    "startTIme": {
                        "type": "number"
                    },
                    "endTime": {
                        "type": "number"
                    },
                    "fadeInTime": {
                        "type": "number"
                    },
                    "fadeOutTime": {
                        "type": "number"
                    }
                }
            }
        },
        "chlorophyllSavefile": {
            "type": "object",
            "properties": {
                "next_guid": {
                    "type": "number"
                },
                "model": {
                    "$ref": "#/definitions/objects/model"
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/group"
                    }
                },
                "mappings": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/mapping"
                    }
                },
                "patterns": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/patternType"
                    }
                },
                "graphs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/graph"
                    }
                },
                "playlistItems": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/playlistItem"
                    }
                },
                "timelines": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/timeline"
                    }
                },
                "outputs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/output"
                    }
                },
                "layers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/layer"
                    }
                },
                "clips": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/objects/clip"
                    }
                }
            },
            "required": [
                "next_guid",
                "model",
                "groups",
                "patterns",
                "graphs"
            ]
        }
    }
}
