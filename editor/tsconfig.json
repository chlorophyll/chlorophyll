{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": false,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2017",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "common/*": ["../common/*"],
            "chl/*": ["src/js/*"],
            "three-examples/*": ["node_modules/three/examples/js/*"],
            "models/*": ["static/models/*"],
            "style/*": ["src/style/*"],
            "vue": ["node_modules/vue/dist/vue.esm.js"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
